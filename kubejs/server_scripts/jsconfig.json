{
    "compilerOptions": {
        "skipDefaultLibCheck": true,
        "types": [
            "../../.probe/server/packages",
            "../../.probe/server/global",
            "../../.probe/shared"
        ],
        "lib": [
            "ES5",
            "ES2015"
        ],
        "skipLibCheck": true,
        "composite": true,
        "module": "commonjs",
        "isolatedModules": true,
        "rootDir": ".",
        "moduleResolution": "classic",
        "incremental": true,
        "allowJs": true,
        "target": "ES2015"
    },
    "include": [
        "./**/*.js"
    ]
}